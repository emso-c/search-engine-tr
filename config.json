{
    "system": {
        "machine_id": 0,
        "total_machines": 4
    },
    "crawler": {
        "max_workers": {
            "ip_search": 1024,
            "url_frontier": 1024,
            "page_search": 1
        },
        "chunk_size": 8,
        "shuffle_chunks": true,
        "parallelism": 2,
        "req_timeout": 10,
        "ports": [80, 443],
        "allowed_protocols": [
            "http",
            "https"
        ],
        "max_document_length": 5000,
        "fail_reason_weights": {
            "INVALID_STATUS_CODE": 0.7,
            "NOT_AVAILABLE": 1,
            "NOT_TURKISH": 2
        },
        "user_agent": "KTUBot/1.0 (+http://www.ktu.edu.tr)",
        "retry_after_minutes": 10
    }
}